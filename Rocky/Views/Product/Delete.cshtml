@model Rocky.Models.Product

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-4">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Category</h2>
        </div>
        <div class="row">
            <div class="col-10">
                <div class="form-group row" style="margin-bottom:5px">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control w-100" />
                    </div>

                </div>
                <div class="form-group row" style="margin-bottom:10px">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control w-100" />
                    </div>

                </div>
                <div class="form-group row" style="margin-bottom:10px">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control  summernote" style="margin-bottom:10px"></textarea>                 
                    </div>                    
                    <div class="form-group row" style="margin-bottom:10px">
                        <div class="col-4">
                            Image
                        </div>
                        <div class="col-8">                                                                                  
                            <img src="@WebConstants.ImagePath@Model.Image" width="350" style="border-radius:5px; border:1px solid #bbb; margin-top:3px" />                           
                        </div>
                </div>
                <div class="form-group row" style="margin-bottom:10px">
                    <div class="col-4">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control w-100" />
                    </div>

                </div>
                    <div class="form-group row" style="margin-bottom:10px">
                        <div class="col-4">
                            <label asp-for="ApplicationTypeId"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ApplicationType.Name" disabled class="form-control w-100" />
                        </div>

                    </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 160,
                disable:true,
            });
        });
        
    </script>
}